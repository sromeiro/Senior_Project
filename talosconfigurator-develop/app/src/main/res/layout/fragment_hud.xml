<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:custom="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:visibility="visible"
                                             android:id="@+id/hud_layout"
                                             tools:context="com.sofwerx.usf.talosconfigurator.HudFragment">

  <Spinner
    android:id="@+id/spinner_HUD_Color"
    style="@android:style/Widget.Spinner"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginEnd="105dp"
    android:layout_marginStart="114dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toStartOf="@+id/guideline7"
    app:layout_constraintHorizontal_bias="0.013"
    app:layout_constraintStart_toEndOf="@+id/guideline"
    app:layout_constraintTop_toTopOf="parent"></Spinner>
    <ExpandableListView
        android:id="@+id/ExList1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintRight_toLeftOf="@+id/guideline4"
        android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>


    <ImageView
        android:id="@+id/left_hud"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/hud_area" />

    <ImageView
        android:id="@+id/right_hud"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hud_area" />

  <com.sofwerx.usf.talosconfigurator.Grid
    android:id="@+id/hud1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="80dp"
    android:alpha="0.5"
    android:background="@android:color/holo_green_dark"
    app:layout_constraintBottom_toTopOf="@+id/guideline5"
    app:layout_constraintLeft_toLeftOf="@+id/guideline4"
    app:layout_constraintRight_toLeftOf="@+id/guideline"
    app:layout_constraintTop_toTopOf="parent"
    custom:name="hud1" />

  <com.sofwerx.usf.talosconfigurator.Grid
    android:id="@+id/hud2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="32dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="80dp"
    android:alpha="0.5"
    android:background="@android:color/holo_green_dark"
    app:layout_constraintBottom_toTopOf="@+id/guideline5"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="@+id/guideline"
    app:layout_constraintRight_toLeftOf="@+id/guideline6"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    custom:name="hud2" />

    <com.sofwerx.usf.talosconfigurator.Grid
        android:id="@+id/hud3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:alpha="0.5"
      android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        custom:name="hud3" />

    <com.sofwerx.usf.talosconfigurator.Grid
        android:id="@+id/hud4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:alpha="0.5"
      android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        custom:name="hud4" />

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.25" tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="240dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.625" tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="601dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.4375"
                                          tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="421dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.8125"
                                          tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="781dp"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_left_lookdown" app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4" android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/guideline5" android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        style="@android:style/Widget.Spinner"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/spinner_right_lookdown"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="@+id/guideline5"
        android:layout_marginTop="8dp"
        style="@android:style/Widget.Spinner"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Hud 1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hud1"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Hud 2"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hud2"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintVertical_bias="1.0"
        custom:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Hud 3"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hud3"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintVertical_bias="1.0"
        custom:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Hud 4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hud4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintVertical_bias="1.0"
        custom:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Left Lookdown"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinner_left_lookdown"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="0.926" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Right Lookdown"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinner_right_lookdown"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="0.926" />


</android.support.constraint.ConstraintLayout>

